<gconfschemafile>
  <schemalist>
    <schema>
      <key>/schemas/apps/mcatalog/ui/main_window_width</key>
      <applyto>/apps/mcatalog/ui/main_window_width</applyto>
      <owner>mcatalog</owner>
      <type>int</type>
      <default>600</default>
      <locale name="C">
         <short>Width of the main window</short>
         <long>
           The width of the main window.
         </long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/mcatalog/ui/main_window_height</key>
      <applyto>/apps/mcatalog/ui/main_window_height</applyto>
      <owner>mcatalog</owner>
      <type>int</type>
      <default>400</default>
      <locale name="C">
         <short>Height of main window</short>
         <long>
           The height of the main window.
         </long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/mcatalog/ui/catalog_list_width</key>
      <applyto>/apps/mcatalog/ui/catalog_list_width</applyto>
      <owner>mcatalog</owner>
      <type>int</type>
      <default>180</default>
      <locale name="C">
         <short>Width of catalog list</short>
         <long>
           The width of the catalog list.
         </long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/mcatalog/ui/item_list_width</key>
      <applyto>/apps/mcatalog/ui/item_list_width</applyto>
      <owner>mcatalog</owner>
      <type>int</type>
      <default>360</default>
      <locale name="C">
         <short>Width of item list</short>
         <long>
           The width of the item list.
         </long>
      </locale>
    </schema>   

    <schema>
      <key>/schemas/apps/mcatalog/ui/borrowers_list_height</key>
      <applyto>/apps/mcatalog/ui/borrowers_list_height</applyto>
      <owner>mcatalog</owner>
      <type>int</type>
      <default>360</default>
      <locale name="C">
         <short>Height of borrowers list</short>
         <long>
           The height of the borrowers list.
         </long>
      </locale>
    </schema>  

    <schema>
      <key>/schemas/apps/mcatalog/active_catalog</key>
      <applyto>/apps/mcatalog/active_catalog</applyto>
      <owner>mcatalog</owner>
      <type>string</type>
      <default>books</default>
      <locale name="C">
         <short>Default catalog</short>
         <long>
           The default actived catalog.
         </long>
      </locale>
    </schema>       
     
     <schema>
      <key>/schemas/apps/mcatalog/ui/theme</key>
      <applyto>/apps/mcatalog/ui/theme</applyto>
      <owner>mcatalog</owner>
      <type>string</type>
      <default>default</default>
      <locale name="C">
         <short>Theme</short>
         <long>
           The active theme.
         </long>
      </locale>
    </schema>       
    
    <schema>
      <key>/schemas/apps/mcatalog/preview_cache</key>
      <applyto>/apps/mcatalog/preview_cache</applyto>
      <owner>mcatalog</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
         <short>Save preview images in a cache</short>
         <long>Save preview images in a cache (faster rendering)</long>
      </locale>
    </schema>  
   </schemalist>  
</gconfschemafile>
